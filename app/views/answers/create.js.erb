<% if @answer.root? %>
  $('.btn-add-answer').css('display', 'block');
  $('.add-answer').css('display','none');
  $('.container-answers').prepend('<%= j render "answer", answer: @answer,
    vote: Vote.new %>');
  $('.count-answer h5').html('<%= j render "shared/answer_count",
    question: @question %>');
<% else %>
  $('.btn-add-comment').css('display', 'block');
  $('.add-comment').css('display','none');
  $('#answer_<%= @answer.parent.id %> .container-comments')
    .prepend('<%= j render "answers/comment", comment: @answer %>');
  $('.count-answer h5').html('<%= j render "shared/answer_count",
    question: @question %>');
<% end %>
