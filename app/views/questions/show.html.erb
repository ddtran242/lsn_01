<div class="topic-title">
  <div class="container">
    <h4>
      <%= link_to question_path do %>
        <%= @question.title %>
      <% end %>
    </h4>
  </div>
</div>
<div class="container-question">
  <%= render @question %>
</div>
<div class="count-answer">
  <h5>
    <span><%= @supports_question.answers.count() %></span>
    <%= t "answer_count" %>
  </h5>
</div>
<div class="container-answers">
  <% @supports_question.answers.each_with_index do |answer, index| %>
    <%= render answer, vote: @supports_question.vote_answers[index] %>
  <% end %>
</div>
