<table>
  <tr>
    <td id="vote_form" class="vote">
      <%= render "votes/vote", votable: @question %>
    </td>
    <td class="collection">
      <div class="collection-item avatar">
        <%= link_to user_path @question.user do %>
          <%= image_tag "yuna.jpg", class: "circle" %>
        <% end %>
        <%= link_to user_path @question.user do %>
          <span class="title"><%= @question.user.username %></span><br>
        <% end %>
        <span><%= t "fake.point" %></span>
        <span class="medal">
          <%= image_tag "gold-medal.png", alt: "medal" %>
        </span>
        <div class="content_question">
          <p>
            <%= @question.content %>
          </p>
        </div>
        <div class="secondary-content">
          <span><%= @question.created_at %></span>
        </div>
        <table class="question-footer">
          <tr>
            <td class="add-comment">
              <%= link_to t("add_answer"), "#" %>
            </td>
            <td id="flag-report">
              <% if !user_signed_in? || !(current_user.reporting? @question) %>
                <div class="report">
                  <%= link_to "#report" do %>
                    <i class="material-icons">flag</i>
                    <span><%= t "report" %></span>
                  <% end %>
                </div>
              <% else %>
                <div class="success-report">
                  <%= link_to "#report" do %>
                    <i class="material-icons">flag</i>
                    <span><%= t "report" %></span>
                  <% end %>
                </div>
              <% end %>
              <div id="report" class="modal modal-report">
                <div class="modal-content">
                  <%= render @supports_question.report %>
                </div>
              </div>
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
</table>
