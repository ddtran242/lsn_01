<div class="card">
  <div class="row">
    <div class="col s1 avatar">
      <%= link_to user_path question.user do %>
        <% if question.user.avatar? %>
          <%= image_tag question.user.avatar.url, class: "circle" %>
        <% else %>
          <img src="https://cdn.pixabay.com/photo/2016/08/20/05/38/avatar-160691
            6_960_720.png" alt="avatar" class="circle">
        <% end %>
      <% end %>
    </div>
    <div class="col s11 padding-left-20">
      <h2>
        <%= link_to question.title, question %>
      </h2>
      <p>
        <%= link_to question.content.html_safe, question %>
        <span class="chip">
          <%= link_to question.category, class: "text-black" do %>
            <%= question.category.ancestors[0].name %> -
            <%= question.category.name %>
          <% end %>
        </span>
        <% question.tag_list.each do |tag| %>
          <%= link_to tags_path(name: tag) do %>
            <span class="chip"><%= tag %></span>
          <% end %>
        <% end %>
      </p>
      <div class="divide"></div>
      <p class="group-count">
        <strong class="owner-question">
          <%= link_to question.user.username, user_path(question.user) %>
        </strong>
        <strong class="space"></strong>
        <i class="material-icons">date_range</i>
        <strong><%= time_ago_in_words question.created_at %></strong>
        <strong class="space"></strong>
        <i class="material-icons">speaker_notes</i>
        <strong><%= pluralize question.answers.count, t("answers") %></strong>
        <strong class="space"></strong>
        <i class="material-icons"><%= t "text.grade" %></i>
        <strong><%= question.vote_count %></strong>
      </p>
    </div>
  </div>
</div>
