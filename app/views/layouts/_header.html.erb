<nav class="header">
  <div class="nav-wrapper row">
    <div class="col m2">
      <%= link_to t("text.logo"),root_path, class: "brand-logo" %>
    </div>
    <div class="col m6 nav-wrapper">
      <%= form_tag searches_path, method: :get do %>
        <div class="input-field">
          <%= search_field_tag :query, params[:query] %>
          <label class="label-icon" for="search">
            <i class="material-icons"><%= t "search" %></i>
          </label>
          <i class="material-icons"><%= t "close" %></i>
        </div>
      <% end %>
    </div>
    <ul class="right hide-on-med-and-down col m4">
      <li>
        <%= link_to t("button.create"),new_question_path, class: "waves-effect
          waves-light btn create_question" %>
      </li>
      <% if current_user %>
        <li class="avatar">
          <a class="dropdown-button" href="#" data-activates="dropdown1">
            <% if current_user.avatar? %>
              <%= image_tag current_user.avatar.url %>
            <% else %>
              <img src="https://cdn.pixabay.com/photo/2016/08/20/05/38/avatar-16
                06916_960_720.png" alt="avatar" class="circle">
            <% end %>
          </a>
        </li>
        <ul id="dropdown1" class="dropdown-content">
          <li><%= link_to t("link.profile"), user_path(current_user) %></li>
          <% if current_user.is_admin? %>
            <li><%= link_to t("link.admin"), admin_reports_path %></li>
          <% end %>
          <li><%= link_to t("link.sign_out"), destroy_user_session_path,
            method: :delete %></li>
        </ul>
      <% else %>
        <li>
          <%= link_to t("link.login"), new_user_session_path, method: :get %>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
